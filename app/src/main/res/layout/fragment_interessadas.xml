<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/grid">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="89dp"
            android:id="@+id/imageView2"
            android:src="@drawable/blusa3"
            android:layout_alignBottom="@+id/view"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10px"
            android:layout_row="0"
            android:layout_column="0" />

        <TableLayout
            android:layout_width="223dp"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nome: "
                    android:id="@+id/textView7"
                    android:textStyle="bold"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_below="@+id/section_label2"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Curso da UFMG "
                    android:id="@+id/textView8"
                    android:layout_above="@+id/textView3"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_row="0"
                    android:layout_column="5" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Preço: "
                    android:id="@+id/textView9"
                    android:textStyle="bold"
                    android:layout_below="@+id/textView"
                    android:layout_toEndOf="@+id/section_label2"
                    android:layout_row="1"
                    android:layout_column="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="R$27"
                    android:id="@+id/textView10"
                    android:layout_above="@+id/textView2"
                    android:layout_toEndOf="@+id/textView3"
                    android:layout_row="0"
                    android:layout_column="5" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Descrição: "
                android:id="@+id/textView11"
                android:textStyle="bold"
                android:layout_below="@+id/textView3"
                android:layout_toEndOf="@+id/section_label2"
                android:layout_row="6"
                android:layout_column="1" />

            <TextView
                android:layout_width="155dp"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Blusa com o nome do curso e brasão da UFMG"
                android:id="@+id/textView12" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalhes"
                    android:id="@+id/button3"
                    android:layout_column="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desfazer"
                    android:id="@+id/button4"
                    android:layout_column="5" />
            </TableRow>

        </TableLayout>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="89dp"
            android:id="@+id/imageView3"
            android:src="@drawable/blusa4"
            android:layout_alignBottom="@+id/view"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10px"
            android:layout_row="0"
            android:layout_column="0" />

        <TableLayout
            android:layout_width="223dp"
            android:layout_height="match_parent" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/row1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nome: "
                    android:id="@+id/textView13"
                    android:textStyle="bold"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_below="@+id/section_label2"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Estampa Azul  "
                    android:id="@+id/textView14"
                    android:layout_above="@+id/textView3"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_row="0"
                    android:layout_column="5" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Preço: "
                    android:id="@+id/textView15"
                    android:textStyle="bold"
                    android:layout_below="@+id/textView"
                    android:layout_toEndOf="@+id/section_label2"
                    android:layout_row="1"
                    android:layout_column="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="R$20"
                    android:id="@+id/textView16"
                    android:layout_above="@+id/textView2"
                    android:layout_toEndOf="@+id/textView3"
                    android:layout_row="0"
                    android:layout_column="5" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Descrição: "
                android:id="@+id/textView17"
                android:textStyle="bold"
                android:layout_below="@+id/textView3"
                android:layout_toEndOf="@+id/section_label2"
                android:layout_row="6"
                android:layout_column="1" />

            <TextView
                android:layout_width="155dp"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Blusa com o nome do curso e brasão da UFMG"
                android:id="@+id/textView18" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalhes"
                    android:id="@+id/button5"
                    android:layout_column="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desfazer"
                    android:id="@+id/button6"
                    android:layout_column="5" />
            </TableRow>
        </TableLayout>
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"
        android:layout_row="0"
        android:layout_column="7"
        android:layout_marginBottom="10px"
        android:layout_below="@+id/grid"
        android:layout_alignParentStart="true" />
</RelativeLayout>
