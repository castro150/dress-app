<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/linearLayout">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/grid"
            android:layout_marginBottom="30px">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="89dp"
                android:id="@+id/imageView2"
                android:src="@drawable/blusa5"
                android:layout_alignBottom="@+id/view"
                android:layout_alignParentStart="true"
                android:layout_marginRight="10px"
                android:layout_row="0"
                android:layout_column="0" />

            <TableLayout
                android:layout_width="223dp"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Nome: "
                        android:id="@+id/textView7"
                        android:textStyle="bold"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_below="@+id/section_label2"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Blusa High"
                        android:id="@+id/textView8"
                        android:layout_above="@+id/textView3"
                        android:layout_toEndOf="@+id/textView"
                        android:layout_row="0"
                        android:layout_column="5" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Preço: "
                        android:id="@+id/textView9"
                        android:textStyle="bold"
                        android:layout_below="@+id/textView"
                        android:layout_toEndOf="@+id/section_label2"
                        android:layout_row="1"
                        android:layout_column="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="R$28"
                        android:id="@+id/textView10"
                        android:layout_above="@+id/textView2"
                        android:layout_toEndOf="@+id/textView3"
                        android:layout_row="0"
                        android:layout_column="5" />
                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Descrição: "
                    android:id="@+id/textView11"
                    android:textStyle="bold"
                    android:layout_below="@+id/textView3"
                    android:layout_toEndOf="@+id/section_label2"
                    android:layout_row="6"
                    android:layout_column="1" />

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="35dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Blusa com estampa diferenciada, ótimo material"
                    android:id="@+id/textView12" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>

            </TableLayout>

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <GridLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/gridLayout2"
            android:layout_above="@+id/view"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fechar"
                android:id="@+id/button"
                android:layout_column="1"
                android:layout_below="@+id/button3"
                android:layout_toStartOf="@+id/button4"
                android:layout_row="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interessados"
                android:id="@+id/button4"
                android:layout_column="2"
                android:layout_alignTop="@+id/button3"
                android:layout_centerHorizontal="true"
                android:layout_row="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalhes"
                android:id="@+id/button7"
                android:layout_row="1"
                android:layout_column="1" />

            <Button
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:id="@+id/button2"
                android:layout_column="2"
                android:layout_below="@+id/button4"
                android:layout_toEndOf="@+id/button"
                android:layout_row="1" />
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentEnd="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/view"
            android:layout_row="0"
            android:layout_column="7"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

</RelativeLayout>
